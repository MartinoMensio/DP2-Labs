<?xml version="1.0" encoding="UTF-8"?>
<!ELEMENT nffgs (nffg)*>
<!ELEMENT nffg (nodes,links, policies?)>
<!ELEMENT nodes (node)*>
<!ELEMENT node (functionality)>
<!ELEMENT functionality EMPTY>
<!ELEMENT links (link)*>
<!ELEMENT link (src,dst)>
<!ELEMENT src EMPTY>
<!ELEMENT dst EMPTY>
<!ELEMENT name (#PCDATA)>
<!ELEMENT policies (policy)*>
<!ELEMENT policy (src,dst,functionality*)>


<!ATTLIST nffg
	name ID #REQUIRED>
<!ATTLIST node
	name ID #REQUIRED>
<!ATTLIST functionality
	type (CACHE | DPI | FW | MAIL_CLIENT | MAIL_SERVER | NAT | SPAM | VPN | WEB_CLIENT | WEB_SERVER) #REQUIRED>
<!ATTLIST link
	name ID #REQUIRED>
<!ATTLIST src
	ref IDREF #REQUIRED>
<!ATTLIST dst
	ref IDREF #REQUIRED>
<!ATTLIST policy
	name ID #REQUIRED
	result (positive|negative) "positive">
